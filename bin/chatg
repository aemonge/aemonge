#!/bin/sh

touch /tmp/query.md

if [ -z "$NVIM" ]; then
    if [ -n "$1" ]; then
        nvim +':lua require(\"settings.bots.chatgpt-miu\")(0, true)';
        # Use the date or something to fetch from history the chat
    else
        nvim +':lua require(\"settings.bots.chatgpt-miu\")(1, true)';
    fi
else
    if [ -n "$1" ]; then
        nvr -c ':lua require("settings.bots.chatgpt-miu")(0, true)';
        # Use the date or something to fetch from history the chat
    else
        nvr -c ':lua require("settings.bots.chatgpt-miu")(1, true)';
    fi
fi
