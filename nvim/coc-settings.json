{
  // PYTHON SETTINGS AND EXTENSIONS
  "python.formatting.provider": "black",
  "python.sortImports.path": "isort",
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.flake8Args": ["--config=/path/to/your/flake8/config"],
  "python.linting.mypyArgs": ["--config=/path/to/your/mypy/config"],

  // NAVIGATION & UI
  "tree.key.selectNext": "<c-n>",
  "tree.key.selectPrevious": "<c-p>",
  "list.nextKeymap": "<c-n>",
  "list.previousKeymap": "<c-p>",
  "codeLens.enable": true,
  "codeLens.position": "right_align",
  "colors.enable": true,
  "workspace.rootPatterns": [
    ".env",
    ".git",
    ".hg",
    ".bzr",
    ".svn",
    "Makefile",
    "package.json",
    "requirements.txt",
    "Gemfile",
    "environment.yml",
    "README.rst",
    "README.md",
    "pyproject.toml",
    "tox.ini"
  ],

  // NAVIGATION & UI (Diagnostic)
  "diagnostic.checkCurrentLine": true,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.errorSign": "戀",
  "diagnostic.warningSign": "⚠",
  "diagnostic.hintSign": "♥",
  "diagnostic.infoSign": "כֿ",
  "hover.floatConfig": {
    "border": true,
    "rounded": true
  },
  "diagnostic.enableHighlightLineNumber": false,
  "diagnostic.floatConfig": {
    "border": true,
    "rounded": true
  },

  // NAVIGATION & UI (Suggestions)
  "suggest.virtualText": true,
  "suggest.noselect": true,
  "suggest.enablePreselect": false,
  "suggest.preferCompleteThanJumpPlaceholder": true,
  "suggest.removeDuplicateItems": true,
  "suggest.floatConfig": {
    "border": true,
    "rounded": true
  },
  "suggest.selection": "first",
  "suggest.autoTrigger": "always",
  "suggest.insertMode": "replace",

  // Completion priorities
  "tabnine.limit": 3,
  "tabnine.shortcut": "ﮧ",
  "snippets.priority": 90,
  "coc.source.file.priority": 10,

  // LANGUAGE & SPELL
  "cSpell.import": ["@cspell/dict-es-es/cspell-ext.json"],
  "cSpell.dictionaries": [
    "es_US",
    "softwareTerms",
    "companies",
    "python",
    "html",
    "css",
    "bash",
    "latex",
    "node",
    "filetypes"
  ],
  "cSpell.enabledLanguageIds": [
    "es_es",
    "asciidoc",
    "c",
    "cpp",
    "csharp",
    "css",
    "es",
    "git-commit",
    "gitcommit",
    "go",
    "handlebars",
    "haskell",
    "html",
    "jade",
    "java",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "latex",
    "less",
    "markdown",
    "php",
    "plaintext",
    "pug",
    "python",
    "restructuredtext",
    "rust",
    "scala",
    "scss",
    "text",
    "typescript",
    "typescriptreact",
    "vim",
    "yaml",
    "yml"
  ],
  "cSpell.logLevel": "Error",
  "cSpell.showStatus": false,
  "cSpell.includeRegExpList": [
    "/from\\s+(['\"]).*\\1/"
  ],

  // LANGUAGESERVER
  "languageserver": {
    "sourcery": {
      "command": "sourcery",
      "args": ["lsp"],
      "filetypes": ["python"],
      "initializationOptions": {
        "extension_version": "coc.nvim",
        "editor_version": "neovim"
      },
      "settings": {
        "sourcery": {
          "metricsEnabled": true
        }
      }
    }
  }
}
