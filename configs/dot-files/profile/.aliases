#!/bin/bash

# System
alias open="xdg-open"
alias copy="xclip -sel clip"
alias ll='tree -Chl -L 3 --dirsfirst'

# Vim
alias vcd=~/usr/bin/vcd
alias f='vim $(fzf)'

# Chat GTP
alias vic="touch /tmp/query.md; nvim +':lua require(\"settings.bots.chatgpt-miu\")(0, true)'"
alias vic_n="touch /tmp/query.md; nvim +':lua require(\"settings.bots.chatgpt-miu\")(1, true)'"

