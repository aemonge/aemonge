deck  ALL=(ALL) NOPASSWD: /usr/bin/systemctl start docker
deck  ALL=(ALL) NOPASSWD: /usr/bin/systemctl start docker.service
deck  ALL=(ALL) NOPASSWD: /usr/bin/systemctl stop docker
deck  ALL=(ALL) NOPASSWD: /usr/bin/systemctl stop docker.service
deck  ALL=(ALL) NOPASSWD: /usr/bin/systemctl restart docker
deck  ALL=(ALL) NOPASSWD: /usr/bin/systemctl restart docker.service
