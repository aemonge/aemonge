    // LANGUAGESERVER
    "languageserver": {
        "sourcery": {
            "command": "sourcery",
            "args": [
                "lsp"
            ],
            "filetypes": [
                "python",
                "javascript",
                "typescript"
            ],
            "initializationOptions": {
                "extension_version": "coc.nvim",
                "editor_version": "neovim"
            },
            "settings": {
                "sourcery": {
                    "metricsEnabled": true
                }
            }
        }
    },
    "svelte.enable-ts-plugin": true
