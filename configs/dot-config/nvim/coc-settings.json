{
    "yaml.format.enable": true,
    // Bash
    "sh.enable": true,
    // Markdown
    "markdownlint.config": {
        "MD013": {
            "line_length": 88
        },
        "MD030": false
    },
    // PYTHON SETTINGS AND EXTENSIONS
    // Python linting: flake8:
    //    flake8-quotes, pep8-naming, flake8-picky-parentheses, flake8-docstrings
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    // Python type checking: pyright (or mypy, but pyright integrates better)
    "pyright.enable": true,
    "python.venvPath": "~/.conda/envs/",
    // Security checks
    "python.linting.banditEnabled": true,
    // NAVIGATION & UI
    "tree.key.selectNext": "<c-n>",
    "tree.key.selectPrevious": "<c-p>",
    "list.nextKeymap": "<c-n>",
    "list.previousKeymap": "<c-p>",
    "codeLens.enable": false,
    "codeLens.position": "right_align",
    "colors.enable": true,
    "workspace.rootPatterns": [
        ".env",
        ".git",
        ".hg",
        ".bzr",
        ".svn",
        "Makefile",
        "package.json",
        "requirements.txt",
        "Gemfile",
        "environment.yml",
        "README.rst",
        "README.md",
        "pyproject.toml",
        "tox.ini"
    ],
    // NAVIGATION & UI (Diagnostic)
    "diagnostic.enableMessage": "jump", // Use this to never to not show the on hover
    "diagnostic.checkCurrentLine": true,
    "diagnostic.refreshOnInsertMode": false,
    "diagnostic.errorSign": "",
    "diagnostic.warningSign": "",
    "diagnostic.hintSign": "✎",
    "diagnostic.infoSign": "כֿ",
    "hover.floatConfig": {
        "border": true,
        "rounded": true
    },
    "signature.floatConfig": {
        "border": true,
        "rounded": true
    },
    "diagnostic.enableHighlightLineNumber": true,
    "diagnostic.floatConfig": {
        "border": true,
        "rounded": true
    },
    "coc.preferences.formatOnSave": true,
    "diagnostic.format": "(%source:%code) %message.",
    "diagnostic-languageserver.mergeConfig": true,
    "diagnostic-languageserver.filetypes": {
        "python": [
            "pyright",
            "sourcery",
            "python-lsp-server"
        ]
    },
    "diagnostic-languageserver.linters": {
        "python": [
            "flake8",
            "pyright",
            "bandit"
        ],
        "vim": "vint",
        "text": "languagetool",
        "email": "languagetool",
        "lua": [
            "selene"
        ],
        "markdown": [
            "alex",
            "write-good",
            "textlint",
            "proselint",
            "languagetool",
            "markdownlint"
        ],
        "yaml": [
            "yamllint"
        ]
    },
    "diagnostic-languageserver.formatFiletypes": {
        "python": [
            "black",
            "isort",
            "autoflake",
            "autopep8",
            "docformatter"
        ],
        "lua": "stylua",
        // "sh": [
        // "shfmt",
        // "beautysh",
        // "shellharden"
        // ],
        // "bash": [
        // "shfmt",
        // "beautysh",
        // "shellharden"
        // ],
        "markdown": [
            "prettierd",
            "markdownlint",
            "prettier"
        ],
        "yaml": [
            "yamlfmt",
            "yamlfix",
            "prettier"
        ]
    },
    // NAVIGATION & UI (Suggestions)
    "suggest.virtualText": true,
    "suggest.noselect": true,
    "suggest.enablePreselect": false,
    "suggest.preferCompleteThanJumpPlaceholder": true,
    "suggest.removeDuplicateItems": true,
    "suggest.floatConfig": {
        "border": true,
        "rounded": true
    },
    "suggest.selection": "first",
    "suggest.autoTrigger": "always",
    "suggest.insertMode": "replace",
    // Completion priorities
    "tabnine.limit": 3,
    "tabnine.shortcut": "ﮧ",
    "snippets.priority": 90,
    "coc.source.file.priority": 10,
    // LANGUAGE & SPELL
